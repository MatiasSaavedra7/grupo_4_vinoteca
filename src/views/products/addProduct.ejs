<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', {title: 'Agregar Productos', css:
  'addProduct.css'}) %>

  <body>
    
    <%- include('../partials/header.ejs') %>

    <main>
      <div class="add-product">
        <h1>AGREGA UN PRODUCTO!</h1>
        <form
          action="/products/add"
          method="post"
          enctype="multipart/form-data"
        >

          <div class="add-product-field">
            <label for="name">NOMBRE: </label>
            <input type="text" name="name" id="name" required />
          </div>

          <div class="add-product-field">
            <label for="varieties">VARIEDAD: </label>
            <select name="" id="">
              <% grapes.forEach(grape => { %>
                <option value="grape.id"><%= grape.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="add-product-field">
            <label for="origin">ORIGEN: </label>
            <select name="" id="">
              <% country.forEach(country => { %>
                <option value="contry.id"><%= country.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="add-product-field">
            <label for="description">DESCRIPCION: </label>
            <input type="text" name="description" id="description" required />
          </div>

          <div class="add-product-field">
            <label for="price">PRECIO (ARS): </label>
            <input
              type="number"
              name="price"
              id="price"
              placeholder="$"
              required
            />
          </div>

          <div class="add-product-field">
            <label for="image">IMAGEN: </label>
            <input
              type="file"
              name="image"
              id="image"
              accept="image/png, image/jpeg"
            />
          </div>


          <div class="buttons">
            <button type="submit" class="add">AGREGAR</button>
            <button type="reset" class="reset">BORRAR</button>
          </div>
        </form>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
